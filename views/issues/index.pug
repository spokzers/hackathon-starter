extends ../layout

block content
  h2= title
  hr

  
    //- p= issues.length
  each issue in issues
    .row.issue-list
      .panel-body
        .col-sm-8
          //- img(src='https://i.imgur.com/2AaBlpf.png', height=40)
          a(href='/issues/'+issue.issue_no)
            h4
              b= issue.title
          small= "By " + issue.owner.email +' on '+ issue.createdAt

        .col-sm-4
          each tag in issue.tags
            span.badge= tag